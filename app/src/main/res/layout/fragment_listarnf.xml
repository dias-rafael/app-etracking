<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.IncluirNF"
        android:screenOrientation="portrait"
        android:background="@drawable/gradient_background">

    <include layout="@layout/content_nf"
             android:layout_height="0dp" android:layout_width="0dp"
             app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
             android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
             android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvListar"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logo_sm_size_height" app:srcCompat="@drawable/report_icon"
            android:id="@+id/ivListar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:contentDescription="@string/img_topo_listar"/>
    <TextView
            android:text="@string/title_topo_listar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvListar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivListar" android:textSize="@dimen/title_font_size"
            android:textColor="@color/colorPrimaryText"/>

</android.support.constraint.ConstraintLayout>
