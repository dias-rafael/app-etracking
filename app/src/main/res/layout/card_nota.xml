<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView
                android:id="@+id/tvNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/card_primary_size"
                tools:text="@string/card_nota_fiscal"/>

        <TextView
                android:id="@+id/tvSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_secondary_size"
                tools:text="@string/card_mercadoria" android:textColor="@color/colorSecondaryText"/>

        <TextView
                android:id="@+id/tvCNPJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_secondary_size"
                tools:text="@string/card_cnpj_remetente" android:textColor="@color/colorSecondaryText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEndereco"
                android:textSize="@dimen/card_secondary_size" tools:text="@string/card_endereco_entrega"
                android:textColor="@color/colorSecondaryText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTelefone"
                android:textSize="@dimen/card_secondary_size" tools:text="@string/card_telefone_contato"
                android:textColor="@color/colorSecondaryText"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <ImageView
                android:layout_height="@dimen/action_icon" app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:id="@+id/ivEdit" android:layout_width="@dimen/action_icon"
                android:contentDescription="@string/img_action"/>

    </LinearLayout>
</LinearLayout>