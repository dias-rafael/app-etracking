<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/cadrView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:innerRadius="0dp"
                                        card_view:cardElevation="8dp"
                                        card_view:layout_constraintBottom_toBottomOf="parent"
                                        card_view:layout_constraintEnd_toEndOf="parent"
                                        card_view:layout_constraintStart_toStartOf="parent"
                                        card_view:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingStart="8dp" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="99dp" android:verticalScrollbarPosition="defaultPosition">


        <TextView
                android:id="@+id/tvNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:text="Nota Fiscal" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/tvMercadoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Mercadoria"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tvNota"
                android:layout_marginTop="2dp"/>

        <TextView
                android:id="@+id/tvCNPJRemetente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="CNPJ Remetente"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMercadoria"/>
        <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/button2"
                android:background="@drawable/ic_mode_edit_black_48dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.6"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/button3"
                android:layout_marginRight="16dp" android:textColor="@color/colorSecondaryText"/>
        <Button
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:id="@+id/button3" android:layout_marginTop="19dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/ic_delete_black_48dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>