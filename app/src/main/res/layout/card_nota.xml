<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="@string/card_telefone_contato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbTelefone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/label_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvEndereco"/>
    <TextView
            android:text="@string/card_endereco_entrega"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbEndereco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/label_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvNome"/>
    <TextView
            android:text="@string/card_cnpj_remetente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbCNPJ"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/label_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tvSenha"/>
    <TextView
            android:text="@string/card_mercadoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbMercadoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/label_font_size"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/card_secondary_size"
            tools:text="@string/card_nota_fiscal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbNota" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <ImageView
            android:layout_height="@dimen/action_icon" app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            android:id="@+id/ivEdit" android:layout_width="@dimen/action_icon"
            android:contentDescription="@string/img_action"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <TextView
            android:id="@+id/tvSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_secondary_size"
            tools:text="@string/card_mercadoria" android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/lbMercadoria"/>

    <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_secondary_size"
            tools:text="@string/card_cnpj_remetente" android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/lbCNPJ"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEndereco"
            android:textSize="@dimen/card_secondary_size" tools:text="@string/card_endereco_entrega"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/lbEndereco"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelefone"
            android:textSize="@dimen/card_secondary_size" tools:text="@string/card_telefone_contato"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/lbTelefone"/>
    <View
            android:id="@+id/linhaDivideProduto"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextIcons"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/cbEntregue"/>
    <TextView
            android:text="@string/card_nota_fiscal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbNota" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/label_font_size" app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="@string/nf_entregue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbEntregue" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTelefone"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:clickable="false"
            android:textSize="@dimen/label_font_size" android:textColor="@color/colorPrimaryText"/>
</android.support.constraint.ConstraintLayout>












